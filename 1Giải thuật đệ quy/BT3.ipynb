    "def giaithua(n):\n",
    "    n = int(n)\n",
    "    if n == 0 or n ==1:\n",
    "        return 1\n",
    "    else:\n",
    "        return (n*giaithua(n-1))\n",
    "\n",
    "n = input('Nhập n:')    \n",
    "print('Giai thừa của',n,'là:',giaithua(n))"
   ]
